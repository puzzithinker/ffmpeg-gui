{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FFmpeg GUI",
  "version": "1.0.0",
  "identifier": "com.ffmpeg-gui.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build:renderer"
  },
  "app": {
    "windows": [
      {
        "title": "FFmpeg GUI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "console": false,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
